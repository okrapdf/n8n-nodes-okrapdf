{
  "name": "@okrapdf/n8n-nodes-okrapdf",
  "version": "0.1.0",
  "description": "n8n nodes to extract tables and text from PDFs using OkraPDF",
  "keywords": [
    "n8n-community-node-package",
    "n8n",
    "pdf",
    "ocr",
    "table-extraction",
    "okrapdf"
  ],
  "license": "MIT",
  "homepage": "https://okrapdf.com",
  "author": {
    "name": "Steven Tsao",
    "email": "steven@okrapdf.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/steventsao/n8n-nodes-okrapdf.git"
  },
  "main": "index.js",
  "scripts": {
    "build": "tsc && gulp build:icons",
    "dev": "tsc --watch",
    "format": "prettier nodes credentials --write",
    "lint": "eslint 'nodes/**/*.ts' 'credentials/**/*.ts'",
    "lintfix": "eslint 'nodes/**/*.ts' 'credentials/**/*.ts' --fix",
    "prepublishOnly": "pnpm build && pnpm lint -c .eslintrc.prepublish.js"
  },
  "files": [
    "dist"
  ],
  "n8n": {
    "n8nNodesApiVersion": 1,
    "credentials": [
      "dist/credentials/OkraPdfApi.credentials.js"
    ],
    "nodes": [
      "dist/nodes/OkraPdf/OkraPdf.node.js"
    ]
  },
  "devDependencies": {
    "@types/node": "^22.10.1",
    "@typescript-eslint/parser": "~8.16.0",
    "eslint": "^8.0.0",
    "eslint-plugin-n8n-nodes-base": "~1.16.2",
    "gulp": "~5.0.0",
    "n8n-workflow": "*",
    "prettier": "~3.3.3",
    "typescript": "~5.6.3"
  },
  "peerDependencies": {
    "n8n-workflow": "*"
  }
}
